<section class='form-auth'>
    <h2 class='mb-3'>Logear</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <label for="inputEmail" class="sr-only">Email</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'Email', class:'form-control', id:'inputEmail' %>
      </div>
      
      <div class="form-group">
        <label for="inputPassword" class="sr-only">Password</label>
        <%= f.password_field :password, autocomplete: "current-password", placeholder:'Password', class:'form-control', id:'inputPassword' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:'btn btn-block btn-success' %>
      </div>
    <% end %>
      <br>
    <%= render "devise/shared/links" %>
</section>