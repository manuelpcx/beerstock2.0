<div class="container">
  <% if @orders.count > 0 %>
    <table class="table mt-5">
    <thead>
      <tr>
        <th>Producto</th>
        <th>Valor</th>
        <th>Cantidad</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td> <%= order.product.name %> </td>
          <td> <%= order.price %></td>
          <td> <%= order.quantity %> </td>
          <td> <%= order.price * order.quantity %></td>
        </tr>
      <% end %>
      <tr class="table-dark">
      <td></td>
      <td></td>
      <td><strong>Total de la compra:</strong></td>
      <td><strong><%= @orders.map{|order| order.product.price}.sum %></strong></td>
      </tr>
    </tbody>
  </table>

  <%= link_to 'Limpiar carro',clean_orders_path, class: 'btn btn-outline-danger'  %>
  <%= link_to 'Confirmar compra', "#", class:'btn btn-outline-success float-right' %>
  <% else %>
    <p>No tienes productos en tu carro de compra.</p>
  <% end %>

</div>
